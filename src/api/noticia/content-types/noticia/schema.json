{
  "kind": "collectionType",
  "collectionName": "noticias",
  "info": {
    "singularName": "noticia",
    "pluralName": "noticias",
    "displayName": "Noticia"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "titulo"
    },
    "imagen_principal": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "fecha_de_publicacion": {
      "type": "datetime"
    },
    "cuerpo_dinamico": {
      "type": "dynamiczone",
      "components": [
        "bloques-noticia.bloque-video",
        "bloques-noticia.bloque-texto",
        "bloques-noticia.bloque-imagen"
      ]
    },
    "categorias": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::categoria.categoria",
      "mappedBy": "noticias"
    },
    "eventos": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::evento.evento",
      "mappedBy": "noticias"
    }
  }
}
